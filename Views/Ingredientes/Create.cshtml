@model PadariaProj.Models.Ingredientes

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary">Adicionar Ingrediente</h2>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome do ingrediente" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="QuantidadeDisponivel" class="form-label fw-bold"></label>
                        <input asp-for="QuantidadeDisponivel" class="form-control" placeholder="Quantidade disponível" />
                        <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Adicionar</button>
                    </div>
                </form>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar à lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

